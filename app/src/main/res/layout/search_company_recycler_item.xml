<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:paddingBottom="10dp"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_alignParentRight="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/s_avatar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/fashion7"
                android:elevation="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/s_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="سالن یانیز"
                android:textSize="14sp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فیلتر نتایج"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:textSize="16sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_filter_list_black_24dp"
                android:background="@drawable/comment_style"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:strokeColor="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/s_bgTheme"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bshop"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:text="پیشنهاد بیوتی گرام"
                    android:textSize="18sp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:layout_margin="20dp"
                    android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                    android:background="@drawable/selector_textview_time_location"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/s_h1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/h1"
                    android:layout_marginEnd="2dp"/>
                <ImageView
                    android:id="@+id/s_h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/h2"
                    android:layout_marginEnd="2dp"/>
                <ImageView
                    android:id="@+id/s_h3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/h3"
                    android:layout_marginEnd="2dp"/>
                <ImageView
                    android:id="@+id/s_h4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/h4"
                    />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s_advertise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="هدف ما جلب رضایت شماست"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/s_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سه راه شریعتی بالای بیمه ایران"
                android:textColor="@android:color/black"
                android:layout_marginStart="10dp"
                android:textSize="12sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.kikt.view.CustomRatingBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                app:currentStar="3."
                app:maxStar="5"
                app:minStar="1.5"
                app:starHeight="10dp"
                app:starWidth="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نظر"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/s_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:includeFontPadding="false"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:padding="5dp"
                    android:background="@drawable/comment_style"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>