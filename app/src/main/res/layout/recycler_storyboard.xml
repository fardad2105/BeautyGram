<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:padding="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:elevation="5dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:src="@drawable/storyborad_background"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/recycler_storyboard_circleImageView"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:elevation="5dp"
            android:src="@drawable/fashion2"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/background"/>
    </FrameLayout>
    <TextView
        android:id="@+id/recycler_storyboard_text"
        android:text="متن تست"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>