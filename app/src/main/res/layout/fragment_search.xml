<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.main.SearchFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/ic_search_black"
                android:hint="در جستجوی چه هستید"
                android:textSize="16dp"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:background="@drawable/selector_textview_search_services"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_access_time_black_24dp"
                    android:text="زمان"
                    android:textSize="18dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/selector_textview_time_location"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="4"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_location_on_black_24dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:drawablePadding="5dp"
                    android:textSize="18dp"
                    android:text="مکان"
                    android:background="@drawable/selector_textview_time_location"/>

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/s_main_profileFragment_recycler_storyboard"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:elevation="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_page_recycler_items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"/>


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_location_on_white_24dp" />



        <include layout="@layout/content_search" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>